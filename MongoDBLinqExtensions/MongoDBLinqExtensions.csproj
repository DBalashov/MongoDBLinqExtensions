<Project Sdk="Microsoft.NET.Sdk">

    <PropertyGroup>
        <TargetFrameworks>net8.0;net9.0;net10.0</TargetFrameworks>
        <ImplicitUsings>enable</ImplicitUsings>
        <Nullable>enable</Nullable>
        <AssemblyName>MongoDBLinqExtensions</AssemblyName>
        <PackageId>MongoDBLinqExtensions</PackageId>
        <GeneratePackageOnBuild>False</GeneratePackageOnBuild>
        <Version>2024.12.4.0</Version>
        <AssemblyVersion>$(Version)</AssemblyVersion>
        <FileVersion>$(Version)</FileVersion>
        <Description>MongoDB C# Driver extensions (Join, Hierarchy, Save). MIT License</Description>
        <Authors>Denis Balashov</Authors>
        <RepositoryUrl>https://github.com/DBalashov/MongoDBLinqExtensions</RepositoryUrl>
        <Copyright>Denis Balashov</Copyright>
        <PackageTags>c#, mongodb, join, linq, api</PackageTags>
    </PropertyGroup>

    <ItemGroup>
        <PackageReference Include="MongoDB.Driver" Version="3.5.0" />
    </ItemGroup>
</Project>
